<div class="container mt-5">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/" style="color: #FF0000;"><i class="fa fa-home" style="margin-right: 5px; color: #FF0000;"></i>Home</a></li>
                <li class="breadcrumb-item"><a href="/yt-video" style="color: black;">Youtube video</a></li>
                <li class="breadcrumb-item active" aria-current="page">Thumbnail</li>
            </ol>
        </nav>
    </div>

    <div class="flash-messages-container">
        <% if (successMessage && successMessage.length > 0) { %>
            <div class="flash-messages mb-4">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <%= successMessage %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        <% } %>
    
        <% if (errorMessage && errorMessage.length > 0) { %>
            <div class="flash-messages mb-4">
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <%= errorMessage %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        <% } %>
    </div>
    
    <div class="result-container">
        <!-- YouTube Community Post Result -->
        <div class="center-box">
            <h2 class="text-danger text-center">Download YouTube Video Thumbnail</h2>
            <div class="custom-line"></div> 
            <% if (thumbnailUrl) { %>
                <div class="thumbnail-container mt-5">
                    <img src="<%= thumbnailUrl %>" alt="Community Post Image" class="img-fluid rounded">
                </div>
                <a href="/yt-video/thumbnail/download-thumbnail?thumbnailUrl=<%= thumbnailUrl %>" id="downloadButton" class="btn btn-custom btn-lg mt-5">Download Thumbnail</a>
            <% } else { %>
                <p>No image found for this Community Post.</p>
            <% } %>
            <p class="description text-center mt-5">Download thumbnail of the YouTube video directly to your device. Just click the button above!</p>
        </div>
    </div>
</div>

<script src="/js/thumbnail.js"></script>